extends layout.pug
block content
  h1.header Patrons
  p
    a.button(href='/patrons/new_patron') Create New Patron
  table
    thead
      tr
        th Name 
        th Address
        th Email
        th Library ID
        th Zip
    tbody.tbody
      for patron in patrons
        tr.rows
          td
            a(href='/patrons/patron_detail/'+patron.id) #{patron.first_name} #{patron.last_name}
          td #{patron.address}
          td #{patron.email}
          td #{patron.library_id}
          td #{patron.zip_code}
      script(type= 'text/javascript' src='/static/js/jquery-3.3.1.min.js')
      script(type= 'text/javascript' src='/static/js/pagination.js')  
