extends layout.pug
block content
  h1 New Patron
  form.patrons_form(method= 'post')
    p.patrons
      label(for='first_name') First Name
      input#first_name(type='text' name= 'first_name')
    p.patrons
      label(for='last_name') Last Name
      input#last_name(type='text' name= 'last_name')
    p.patrons
      label(for='address')  Address
      input#address(type='text' name= 'address')
    p.patrons
      label(for='email') Email
      input#email(type='text' name= 'email')
    p.patrons
      label(for='library_id') Library ID
      input#library_id(type='text' name= 'library_id')
    p.patrons
      label(for='zip_code') Zip Code
      input#zip_code(type='text' name= 'zip_code')
    p.patrons
      input(type='submit', value='Create New Patron' name= 'submit_button')
  script(type= 'text/javascript' src='/static/js/patrons.js')
